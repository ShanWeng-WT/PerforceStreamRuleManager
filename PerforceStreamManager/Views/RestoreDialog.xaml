<Window x:Class="PerforceStreamManager.Views.RestoreDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Restore from History" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="300" MinWidth="450">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Select a version to restore:" 
                       FontWeight="SemiBold" 
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBlock Name="StreamPathText"
                       Text="Stream: (loading...)" 
                       TextWrapping="Wrap"
                       Foreground="Gray"/>
        </StackPanel>
        
        <!-- Revisions List -->
        <GroupBox Grid.Row="1" Header="Available Versions" Margin="0,0,0,15">
            <ListView Name="RevisionsListView" 
                      BorderThickness="0"
                      SelectionMode="Single"
                      MouseDoubleClick="RevisionsListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Rev" Width="50" DisplayMemberBinding="{Binding Revision}"/>
                        <GridViewColumn Header="Date" Width="140" DisplayMemberBinding="{Binding Date, StringFormat=yyyy-MM-dd HH:mm}"/>
                        <GridViewColumn Header="User" Width="100" DisplayMemberBinding="{Binding User}"/>
                        <GridViewColumn Header="Action" Width="60" DisplayMemberBinding="{Binding Action}"/>
                        <GridViewColumn Header="Description" Width="200" DisplayMemberBinding="{Binding Description}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Restore" 
                    Width="90" 
                    Padding="10,5"
                    Click="RestoreButton_Click"
                    IsDefault="True"
                    Name="RestoreButton"/>
            <Button Content="Cancel" 
                    Width="90" 
                    Margin="10,0,0,0"
                    Padding="10,5"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
