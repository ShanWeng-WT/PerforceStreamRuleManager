<Window x:Class="PerforceStreamManager.Views.RuleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rule Editor" Height="250" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Rule Type -->
        <StackPanel Grid.Row="0" Margin="0,5">
            <Label Content="Rule Type:"/>
            <ComboBox Name="RuleTypeComboBox" 
                      SelectedIndex="0"
                      SelectionChanged="RuleTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="ignore"/>
                <ComboBoxItem Content="remap"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Path -->
        <StackPanel Grid.Row="1" Margin="0,5">
            <Label Content="Path:"/>
            <DockPanel>
                <Button DockPanel.Dock="Right" 
                        Content="Browse..." 
                        Width="80" 
                        Margin="5,0,0,0"
                        Click="BrowseButton_Click"/>
                <TextBox Name="PathTextBox" 
                         VerticalContentAlignment="Center"/>
            </DockPanel>
        </StackPanel>
        
        <!-- Remap Target (conditional) -->
        <StackPanel Grid.Row="2" Margin="0,5" Name="RemapTargetPanel" Visibility="Collapsed">
            <Label Content="Remap Target:"/>
            <DockPanel>
                <Button DockPanel.Dock="Right" 
                        Content="Browse..." 
                        Width="80" 
                        Margin="5,0,0,0"
                        Click="BrowseRemapButton_Click"/>
                <TextBox Name="RemapTargetTextBox" 
                         VerticalContentAlignment="Center"/>
            </DockPanel>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="OK" 
                    Width="80" 
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Margin="10,0,0,0"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
