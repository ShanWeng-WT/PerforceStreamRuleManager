<Window x:Class="PerforceStreamManager.Views.UnsavedChangesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Unsaved Changes" Height="400" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="250" MinWidth="400">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Message -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="You have unsaved changes:" 
                       FontWeight="SemiBold" 
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Do you want to save your changes before exiting?" 
                       TextWrapping="Wrap"
                       Foreground="Gray"/>
        </StackPanel>
        
        <!-- Changes List -->
        <GroupBox Grid.Row="1" Header="Pending Changes" Margin="0,0,0,15">
            <ListView Name="ChangesListView" 
                      BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Stream" Width="150" DisplayMemberBinding="{Binding StreamName}"/>
                        <GridViewColumn Header="Change" Width="350" DisplayMemberBinding="{Binding Description}"/>
                    </GridView>
                </ListView.View>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="#0066CC"
                                           Text="{Binding Name}" 
                                           Margin="0,5,0,2"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Save" 
                    Width="90" 
                    Padding="10,5"
                    Click="SaveButton_Click"
                    IsDefault="True"/>
            <Button Content="Don't Save" 
                    Width="90" 
                    Margin="10,0,0,0"
                    Padding="10,5"
                    Click="DontSaveButton_Click"/>
            <Button Content="Cancel" 
                    Width="90" 
                    Margin="10,0,0,0"
                    Padding="10,5"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
