<Window x:Class="PerforceStreamManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerforceStreamManager"
        mc:Ignorable="d"
        Title="Perforce Stream Rule Manager" Height="700" Width="1000">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings" Command="{Binding OpenSettingsCommand}"/>
                <MenuItem Header="Open _Log File" Command="{Binding OpenLogFileCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_History" Command="{Binding OpenHistoryCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Label Content="Stream:"/>
            <TextBox Name="StreamPathInput" Width="200" 
                     Text="{Binding StreamPathInput, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalAlignment="Center"/>
            <Button Content="Load" 
                    Command="{Binding LoadStreamCommand}"/>
            <Separator/>
            <Button Content="Add Rule" Command="{Binding AddRuleCommand}"/>
            <Button Content="Edit Rule" Command="{Binding EditRuleCommand}"/>
            <Button Content="Delete Rule" Command="{Binding DeleteRuleCommand}"/>
            <Separator/>
            <Button Content="Save" Command="{Binding SaveCommand}"/>
        </ToolBar>
        
        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding ConnectionStatus}"/>
            </StatusBarItem>
        </StatusBar>
        
        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Stream Hierarchy TreeView -->
            <GroupBox Grid.Column="0" Header="Stream Hierarchy" Margin="5">
                <TreeView ItemsSource="{Binding StreamHierarchy}" 
                          SelectedItemChanged="TreeView_SelectedItemChanged">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding Name}"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
            
            <!-- Rules Display -->
            <GroupBox Grid.Column="2" Header="Stream Rules" Margin="5">
                <DockPanel>
                    <!-- View Mode Buttons -->
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                        <RadioButton Content="Local" 
                                     IsChecked="{Binding IsLocalViewMode}" 
                                     GroupName="ViewMode" 
                                     Margin="5"/>
                        <RadioButton Content="Inherited" 
                                     IsChecked="{Binding IsInheritedViewMode}" 
                                     GroupName="ViewMode" 
                                     Margin="5"/>
                        <RadioButton Content="All" 
                                     IsChecked="{Binding IsAllViewMode}" 
                                     GroupName="ViewMode" 
                                     Margin="5"/>
                    </StackPanel>
                    
                    <!-- Two DataGrids with GridSplitter -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Remap Rules Section -->
                        <GroupBox Grid.Row="0" Header="Remap Rules" Margin="5">
                            <DataGrid ItemsSource="{Binding DisplayedRemapRules}" 
                                      SelectedItem="{Binding SelectedRule}"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Type" Binding="{Binding RuleType}" Width="80"/>
                                    <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="*"/>
                                    <DataGridTextColumn Header="Remap Target" Binding="{Binding RemapTarget}" Width="200"/>
                                    <DataGridTextColumn Header="Source Stream" Binding="{Binding SourceStream}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                        
                        <!-- GridSplitter for resizing -->
                        <GridSplitter Grid.Row="1" 
                                     Height="5" 
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Center"
                                     Background="LightGray"/>
                        
                        <!-- Ignore Rules Section -->
                        <GroupBox Grid.Row="2" Header="Ignore Rules" Margin="5">
                            <DataGrid ItemsSource="{Binding DisplayedIgnoreRules}" 
                                      SelectedItem="{Binding SelectedRule}"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Type" Binding="{Binding RuleType}" Width="80"/>
                                    <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="*"/>
                                    <DataGridTextColumn Header="Source Stream" Binding="{Binding SourceStream}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </DockPanel>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
