<Window x:Class="PerforceStreamManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerforceStreamManager"
        mc:Ignorable="d"
        Title="Perforce Stream Rule Manager" Height="700" Width="1000"
        Closing="Window_Closing">
    <Window.Resources>
        <Style x:Key="CustomButtonStyle"  TargetType="Button">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="5,5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                            Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Focusable="False"
                                            RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5F1FB"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CCE4F7"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#A0A0A0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings" Command="{Binding OpenSettingsCommand}"/>
                <MenuItem Header="Open _Log File" Command="{Binding OpenLogFileCommand}"/>
                <Separator/>
                <MenuItem Header="_Restore from History..." Command="{Binding RestoreCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>

        </Menu>
        
        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Label Content="Stream:"/>
            <TextBox Name="StreamPathInput" Width="165" 
                     Text="{Binding StreamPathInput, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalAlignment="Center"/>
            <Button Content="Load" 
                        Style="{StaticResource CustomButtonStyle}"
                        Command="{Binding LoadStreamCommand}"/>
            <Separator/>
            <Button Content="Add Rule" 
                        Style="{StaticResource CustomButtonStyle}"
                        Command="{Binding AddRuleCommand}"/>
            <Button Content="Edit Rule" 
                        Style="{StaticResource CustomButtonStyle}"
                        Command="{Binding EditRuleCommand}"/>
            <Button Content="Delete Rule" 
                        Style="{StaticResource CustomButtonStyle}"
                        Command="{Binding DeleteRuleCommand}"/>
            <Separator/>
            <Button Content="Save" 
                        Style="{StaticResource CustomButtonStyle}"
                        Command="{Binding SaveCommand}"/>
            <Button Content="Restore" 
                        Style="{StaticResource CustomButtonStyle}"
                        Command="{Binding RestoreCommand}" ToolTip="Restore rules from a previous version"/>
        </ToolBar>
        
        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding ConnectionStatus}"/>
            </StatusBarItem>
        </StatusBar>
        
        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Stream Hierarchy TreeView -->
            <GroupBox Grid.Column="0" Header="Stream Hierarchy" Margin="5">
                <TreeView ItemsSource="{Binding StreamHierarchy}" 
                          SelectedItemChanged="TreeView_SelectedItemChanged">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding Name}"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
            
            <!-- Rules Display -->
            <GroupBox Grid.Column="2" Header="Stream Rules" Margin="5">
                <DockPanel>
                    <!-- View Mode Buttons -->
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                        <RadioButton Content="Local" 
                                     IsChecked="{Binding IsLocalViewMode}" 
                                     GroupName="ViewMode" 
                                     Margin="5"/>
                        <RadioButton Content="Inherited" 
                                     IsChecked="{Binding IsInheritedViewMode}" 
                                     GroupName="ViewMode" 
                                     Margin="5"/>
                        <RadioButton Content="All" 
                                     IsChecked="{Binding IsAllViewMode}" 
                                     GroupName="ViewMode" 
                                     Margin="5"/>
                    </StackPanel>
                    
                    <!-- Two DataGrids with GridSplitter -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Remap Rules Section -->
                        <GroupBox Grid.Row="0" Header="Remap Rules" Margin="5">
                            <DataGrid ItemsSource="{Binding DisplayedRemapRules}" 
                                      SelectedItem="{Binding SelectedRule}"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Type" Binding="{Binding RuleType}" Width="80"/>
                                    <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="*"/>
                                    <DataGridTextColumn Header="Remap Target" Binding="{Binding RemapTarget}" Width="200"/>
                                    <DataGridTextColumn Header="Source Stream" Binding="{Binding SourceStream}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                        
                        <!-- GridSplitter for resizing -->
                        <GridSplitter Grid.Row="1" 
                                     Height="5" 
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Center"
                                     Background="LightGray"/>
                        
                        <!-- Ignore Rules Section -->
                        <GroupBox Grid.Row="2" Header="Ignore Rules" Margin="5">
                            <DataGrid ItemsSource="{Binding DisplayedIgnoreRules}" 
                                      SelectedItem="{Binding SelectedRule}"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Type" Binding="{Binding RuleType}" Width="80"/>
                                    <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="*"/>
                                    <DataGridTextColumn Header="Source Stream" Binding="{Binding SourceStream}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </DockPanel>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
